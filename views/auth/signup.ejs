<div class="container py-5"
    style="display: flex; justify-content: center; flex-direction: column; align-items: center;">
    <div class="card" style="width:100%; max-width: 35rem;  background-color: rgb(172, 200, 224); margin-top: 80px;">
        <h3 class="text-center mb-3" style="padding: 30px;">Register to Microsoft Connect</h3>
        <div class="card-body">
            <form action="/signup" method="POST">
                <% if(locals.messages.success){ %>
                    <div class="alert alert-success" role="alert">
                        <%= locals.messages.success %>
                    </div>
                    <% } %>
                        <% if(locals.messages.err){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= locals.messages.err %>
                            </div>
                            <% } %>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label" style="font-weight: bold;">Name</label>
                                        <div class="input-group">
                                            <div class="input-group-text">
                                                <ion-icon name="person-outline"></ion-icon>
                                            </div>
                                            <input name="name" type="text" class="form-control"
                                                id="autoSizingInputGroup" placeholder="Full Name">
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label" style="font-weight: bold;">Username</label>
                                        <div class="input-group">
                                            <div class="input-group-text">
                                                <ion-icon name="person-circle-outline"></ion-icon>
                                            </div>
                                            <input name="username" type="text" class="form-control"
                                                id="autoSizingInputGroup" placeholder="Username">
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" style="font-weight: bold;">Email</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <ion-icon name="mail-outline"></ion-icon>
                                        </div>
                                        <input name="email" type="email" class="form-control" id="autoSizingInputGroup"
                                            placeholder="Email" aria-describedby="emailHelp">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" style="font-weight: bold;">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <ion-icon name="lock-closed-outline"></ion-icon>
                                        </div>
                                        <input name="password" type="password" class="form-control"
                                            id="autoSizingInputGroup" placeholder="Password">
                                    </div>
                                </div>
                <button style="width: 100%;" type="submit" class="btn btn-primary">Submit</button>
                <p class="m-0" style="padding: 10px;">Already have an account?<a href="/login"  style="text-decoration: none;">  Login</a></p>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F5F5F5;
    }
</style>